<clickhouse>
    <logger>
        <level>debug</level>
        <log>/var/log/clickhouse-server/clickhouse-server.log</log>
        <errorlog>/var/log/clickhouse-server/clickhouse-server.err.log</errorlog>
        <size>1000M</size>
        <count>3</count>
    </logger>
    <listen_host>0.0.0.0</listen_host>
    <http_port>8123</http_port>
    <tcp_port>9000</tcp_port>
    <remote_servers>
        <otus>
            <!-- Первый шард -->
            <shard>
                <internal_replication>true</internal_replication>
                <replica>
                    <host>clickhouse1</host>
                    <user>default</user>
                    <password>secret123</password>
                    <port>9000</port>
                </replica>
                <replica>
                    <host>clickhouse2</host>
                    <user>default</user>
                    <password>secret123</password>
                    <port>9000</port>
                </replica>
            </shard>
            <!-- Второй шард -->
            <shard>
                <internal_replication>true</internal_replication>
                <replica>
                    <host>clickhouse3</host>
                    <user>default</user>
                    <password>secret123</password>
                    <port>9000</port>
                </replica>
                <replica>
                    <host>clickhouse4</host>
                    <user>default</user>
                    <password>secret123</password>
                    <port>9000</port>
                </replica>
            </shard>
        </otus>
    </remote_servers>
    <zookeeper>
        <node index="1">
            <host>zookeeper</host>
            <port>2181</port>
        </node>  
    </zookeeper>
    <macros>
        <shard>01</shard>
        <replica>clickhouse1</replica>
    </macros>
    <prometheus>
        <endpoint>/metrics</endpoint>
        <port>9363</port>
        <metrics>true</metrics>
        <events>true</events>
        <asynchronous_metrics>true</asynchronous_metrics>
    </prometheus>
</clickhouse>